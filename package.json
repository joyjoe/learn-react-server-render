{
  "name": "learnwebpack",
  "version": "1.0.0",
  "description": "webpack 3 in action",
  "main": "index.js",
  "scripts": {
    "build:client": "webpack --config webpack.config.client.js --colors --progress --display-reasons",
    "build:server": "webpack --config webpack.config.server.js --colors --progress --display-reasons",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "dev:client": "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.client.js --hotOnly",
    "dev:server": "cross-env NODE_ENV=development node server.js",
    "server": "node server.js",
    "clean": "rimraf dist",
    "eslint": "eslint --ext .js --ext .jsx src/",
    "precommit": "npm run eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joyjoe/learn-webpack.git"
  },
  "keywords": [],
  "author": "joyjoe <zhoujiang@weathercn.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joyjoe/learn-webpack/issues"
  },
  "homepage": "https://github.com/joyjoe/learn-webpack#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.17",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.13.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-react": "^7.5.1",
    "express": "^4.16.2",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "http-proxy-middleware": "^0.17.4",
    "husky": "^0.14.3",
    "memory-fs": "^0.4.1",
    "react-hot-loader": "^3.1.3",
    "rimraf": "^2.6.2",
    "style-loader": "^0.19.0",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  }
}
